{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo-client",
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "rootDir": "src",
    "outDir": "lib",
  },
  "include": [
    "src/client",
    "src/client_mdx",
    "src/client_theme",
    "src/client_theme_basic",
  ],
  "exclude": [
    "**/__tests__/**"
  ]
}