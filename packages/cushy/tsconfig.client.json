{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo-client",
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": [
    "src/client"
  ],
  "exclude": [
    "**/__tests__/**"
  ]
}